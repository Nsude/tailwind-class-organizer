{
  "name": "tailwind-class-organizer",
  "displayName": "Tailwind Class Organizer",
  "description": "Organizes and formats Tailwind CSS classes.",
  "version": "0.0.1",
  "publisher": "Meshach",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nsude/tailwind-class-organizer.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tailwind-organizer.sort",
        "title": "Tailwind: Sort Classes"
      },
      {
        "command": "tailwind-organizer.format",
        "title": "Tailwind: Format Classes (Multiline)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Tailwind Class Organizer",
      "properties": {
        "tailwindOrganizer.multilineThreshold": {
          "type": "integer",
          "default": 80,
          "description": "Character limit before breaking classes into multiple lines."
        },
        "tailwindOrganizer.enableAutoSort": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sort classes on save."
        },
        "tailwindOrganizer.enableAutoMultiline": {
          "type": "boolean",
          "default": false,
          "description": "Automatically format classes to multiline on save."
        },
        "tailwindOrganizer.enableTruncation": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-truncation of class attributes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}